<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LogInServlet</servlet-name>
        <servlet-class>servlets.LogInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EncuestaServlet</servlet-name>
        <servlet-class>servlets.EncuestaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OpcionServlet</servlet-name>
        <servlet-class>servlets.OpcionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VotacionServlet</servlet-name>
        <servlet-class>servlets.VotacionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <jsp-file>/home.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>servlets.LogOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResultadoServlet</servlet-name>
        <servlet-class>servlets.ResultadoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogInServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EncuestaServlet</servlet-name>
        <url-pattern>/encuesta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OpcionServlet</servlet-name>
        <url-pattern>/opcion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VotacionServlet</servlet-name>
        <url-pattern>/votar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResultadoServlet</servlet-name>
        <url-pattern>/resultado</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
